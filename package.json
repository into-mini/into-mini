{
  "private": true,
  "name": "into-mini",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric"
  },
  "scripts": {
    "lint:eslint": "eslint . --quiet --fix --concurrency=auto",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc -p tsconfig.json",
    "prepare": "nice-move git hooks",
    "snapshot": "ava --fail-fast -u -w",
    "test": "ava --fail-fast",
    "try:build": "nodemon",
    "try:watch": "nodemon -- --watch",
    "ts:build": "tsc -p tsconfig.build.json",
    "version:pin": "syncpack fix-mismatches",
    "watch:type": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@vue-mini/pinia": "catalog:"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.28.5",
    "@bring-it/cli": "^0.11.1",
    "@bring-it/npm": "^0.9.3",
    "@nice-move/all-in-vue": "^0.6.24",
    "@nice-move/syncpack-config": "^0.4.2",
    "@nice-move/tsconfig": "^0.3.15",
    "ava": "catalog:",
    "babel-loader": "^10.0.0",
    "eslint": "^9.39.2",
    "garou": "^0.9.17",
    "nodemon": "^3.1.11",
    "prettier": "catalog:",
    "syncpack": "^13.0.4",
    "typescript": "~5.9.3",
    "webpack": "^5.104.0",
    "webpack-cli": "^6.0.1"
  },
  "peerDependencies": {
    "@into-mini/auto-entries-plugin": "workspace:^",
    "@into-mini/sfc-split-plugin": "workspace:^",
    "emit-webpack-entries-plugin": "workspace:^"
  },
  "packageManager": "pnpm@10.26.0",
  "engines": {
    "node": ">=22.18.0"
  },
  "ava": {
    "extensions": [
      "mts",
      "mjs"
    ],
    "require": [
      "./tests/helper/setup.mts"
    ]
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "webpack",
    "ext": "js,cjs,mjs,json,wxs,vue",
    "quiet": true,
    "watch": [
      "packages/**",
      "webpack.config.mjs",
      "package.json",
      "plugin",
      "fake"
    ]
  },
  "prettier": "@nice-move/all-in-vue/prettier"
}
